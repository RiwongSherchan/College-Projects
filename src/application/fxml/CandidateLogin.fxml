<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700" prefWidth="1000" stylesheets="@../resources/styles/CandidateLogin.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CandidateLoginController">
   <children>
   
          <!-- New label for displaying login status -->
       <Label fx:id="loginStatusLabel" layoutX="640.0" layoutY="420.0" prefHeight="18.0" prefWidth="170.0" style="-fx-text-fill: red;" text="asss" visible="false" />
   
          <Label layoutX="642.0" layoutY="106.0" prefHeight="67.0" prefWidth="208.0" text="User Login" />
   
          <TextField fx:id="emailField" layoutX="584.0" layoutY="207.0" prefHeight="67.0" prefWidth="281.0" promptText="Email" />
       <PasswordField fx:id="passwordField" layoutX="584.0" layoutY="316.0" prefHeight="67.0" prefWidth="282.0" promptText="Password" />
   
          <Button fx:id="loginButton" layoutX="560.0" layoutY="470.0" onAction="#loginButtonClicked" prefHeight="67.0" prefWidth="131.0" text="Login" />
