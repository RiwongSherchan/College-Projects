<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="application.controller.CandidateRegistrationController"
	stylesheets="/application/styles/main.css">
	<padding>
		<Insets bottom="10" left="10" right="10" top="10" />
	</padding>

	<Label text="Candidate Registration" />
	<Label text="First Name" />
	<TextField fx:id="firstNameField" />
	<Label text="Last Name" />
	<TextField fx:id="lastNameField" />
	<Label text="Email" />
	<TextField fx:id="emailField" />
	<Label text="Gender" />
	<RadioButton fx:id="maleRadioButton"
		mnemonicParsing="false" text="male" />
	<RadioButton fx:id="femaleRadioButton"
		mnemonicParsing="false" text="Female" />

	<Label text="Country" />
	<RadioButton fx:id="thailandRadioButton"
		mnemonicParsing="false" text="Thailand" />
	<RadioButton fx:id="malaysiaRadioButton"
		mnemonicParsing="false" text="Malaysia" />
	<RadioButton fx:id="singaporeRadioButton"
		mnemonicParsing="false" text="Singapore" />
	<Label text="Password" />
	<TextField fx:id="passwordField" />
	<Label text="Contact Number" />
	<TextField fx:id="contactNumberField" />
	<Button fx:id="registerButton" mnemonicParsing="false"
		text="Register" onAction="#registerButtonClicked" />

	<Button fx:id="CancelButton" text="Cancel"
		onAction="#cancelButtonClicked" />

</VBox>
