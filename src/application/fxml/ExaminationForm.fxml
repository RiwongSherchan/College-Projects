<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="293.0" prefWidth="473.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ExaminationFormController">
    <children>
        <Label fx:id="questionNumberLabel" text="Question" />
        <RadioButton fx:id="optionARadioButton" text="Option A" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="optionBRadioButton" text="Option B" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="optionCRadioButton" text="Option C" toggleGroup="$toggleGroup" />
        <RadioButton fx:id="optionDRadioButton" text="Option D" toggleGroup="$toggleGroup" />
        <Button fx:id="nextButton" onAction="#nextButtonClicked" text="Next" />
        <Button fx:id="backButton" onAction="#backButtonClicked" text="Back" />
        <Label fx:id="timerLabel" text="Timer" />
        <TextArea fx:id="resultTextArea" />
    </children>
</VBox>
