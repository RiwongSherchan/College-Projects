<?xml version="1.0" encoding="UTF-8"?>

<!-- ExaminationForm.fxml -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700" prefWidth="1000"
	stylesheets="@../resources/styles/ExaminationForm.css"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.controller.ExaminationFormController">
	<children>
		<Label fx:id="firstNameLabel" layoutX="67.0" layoutY="53.0"
			prefHeight="20.0" prefWidth="162.0" text="sss" />
		<Label fx:id="genderLabel" layoutX="357.0" layoutY="53.0"
			prefHeight="20.0" prefWidth="189.0" text="sss" />
		<Label fx:id="countryLabel" layoutX="667.0" layoutY="53.0"
			prefHeight="20.0" prefWidth="142.0" text="sss" />

		<Label fx:id="timerLabel" layoutX="26.0" layoutY="88.0"
			prefHeight="27.0" prefWidth="635.0" text="Timer" />
		<Label fx:id="currentQuestionLabel" layoutX="397.0"
			layoutY="136.0" text="Current Question: 1" />
		<Label fx:id="questionNumberLabel" layoutX="52.0"
			layoutY="180.0" prefHeight="20.0" prefWidth="800.0" text="Question" />

		<RadioButton fx:id="optionARadioButton" layoutX="80.0"
			layoutY="373.0" prefHeight="20.0" prefWidth="271.0" text="Option A">
			<toggleGroup>
				<ToggleGroup fx:id="toggleGroup" />
			</toggleGroup>
		</RadioButton>
		<RadioButton fx:id="optionBRadioButton" layoutX="80.0"
			layoutY="494.0" prefHeight="20.0" prefWidth="271.0" text="Option B"
			toggleGroup="$toggleGroup" />
		<RadioButton fx:id="optionCRadioButton" layoutX="587.0"
			layoutY="373.0" prefHeight="20.0" prefWidth="271.0" text="Option C"
			toggleGroup="$toggleGroup" />
		<RadioButton fx:id="optionDRadioButton" layoutX="589.0"
			layoutY="494.0" prefHeight="20.0" prefWidth="271.0" text="Option D"
			toggleGroup="$toggleGroup" />
		<Button fx:id="nextButton" layoutX="508.0" layoutY="614.0"
			onAction="#nextButtonClicked" text="Next" />
		<Button fx:id="backButton" layoutX="307.0" layoutY="614.0"
			onAction="#backButtonClicked" text="Back" />
		<ImageView fx:id="question_image" fitHeight="120.0"
			fitWidth="248.0" layoutX="328.0" layoutY="200.0" pickOnBounds="true"
			preserveRatio="true" />
		<ImageView fx:id="optionAImageView" fitHeight="107.0"
			fitWidth="227.0" layoutX="106.0" layoutY="330.0" pickOnBounds="true"
			preserveRatio="true" />
		<ImageView fx:id="optionBImageView" fitHeight="107.0"
			fitWidth="227.0" layoutX="106.0" layoutY="471.0" pickOnBounds="true"
			preserveRatio="true" />
		<ImageView fx:id="optionCImageView" fitHeight="107.0"
			fitWidth="227.0" layoutX="609.0" layoutY="330.0" pickOnBounds="true"
			preserveRatio="true" />
		<ImageView fx:id="optionDImageView" fitHeight="107.0"
			fitWidth="227.0" layoutX="615.0" layoutY="471.0" pickOnBounds="true"
			preserveRatio="true" />
		<Button fx:id="submitButton" layoutX="403.0" layoutY="614.0"
			onAction="#submitButtonClicked" text="Submit" />
		<Label layoutX="284.0" layoutY="22.0" prefHeight="18.0"
			prefWidth="374.0" text="                        Examination Form" />
		<ImageView fx:id="countryFlagImageView" fitHeight="26.0"
			fitWidth="41.0" layoutX="827.0" layoutY="53.0" pickOnBounds="true"
			preserveRatio="true">
			<image>
				<Image url="@../resources/fxml_images/singapourflag.jpg" />
			</image>
		</ImageView>

	</children>
</AnchorPane>
